<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextField?>
<VBox fx:controller="com.geekbrains.java2.lesson4.hw.Controller" xmlns:fx="http://javafx.com/fxml" alignment="center">
    <TextArea fx:id="messageArea" focusTraversable="false" editable="false" VBox.vgrow="ALWAYS"/>
    <TextField fx:id="newMessage" onAction="#sendMessageTypeAction"/>
    <Button fx:id="sendButton" text="Send" onAction="#sendMessageTypeAction"/>
</VBox>
