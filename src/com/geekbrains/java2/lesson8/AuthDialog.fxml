<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="rootPane" prefHeight="247.0" prefWidth="361.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.geekbrains.java2.lesson8.AuthDialog">
   <children>
      // Текстовая метка для вывода информации о ходе авторизации и ошибках.
      <Label fx:id="authInfo" layoutX="39.0" layoutY="10.0" text="Enter authorisation data" />
      <TextField fx:id="userName" layoutX="165.0" layoutY="54.0" />
      <Label layoutX="39.0" layoutY="58.0" text="Login" />
      <Label layoutX="39.0" layoutY="116.0" text="Password" />
      <PasswordField fx:id="userPassword" layoutX="165.0" layoutY="112.0" onAction="#submitUserPassword" />
      <Button layoutX="96.0" layoutY="200.0" mnemonicParsing="false" onAction="#submitUserPassword" text="OK" />
      <Button layoutX="205.0" layoutY="200.0" mnemonicParsing="false" onAction="#exit" text="Cancel" />
      // Текстовая метка для отображения обратного отсчёта для авторизации
      <Label fx:id="authCountdown" layoutX="214.0" layoutY="10.0" text="" textAlignment="RIGHT" />
   </children>
</AnchorPane>
